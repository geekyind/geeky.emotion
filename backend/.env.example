# Environment Configuration
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lore_emotion
DATABASE_IDENTITY_URL=postgresql://user:password@localhost:5432/lore_emotion_identity

# Redis / AWS ElastiCache
# Local development (Docker):
REDIS_URL=redis://localhost:6379/0
# Production (AWS ElastiCache - replace with your endpoint):
# REDIS_URL=redis://your-cluster.xxxxx.0001.region.cache.amazonaws.com:6379/0
# For ElastiCache with TLS:
# REDIS_URL=rediss://your-cluster.xxxxx.0001.region.cache.amazonaws.com:6379/0?ssl_cert_reqs=none

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# AWS Cognito
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_REGION=us-east-1

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here
SALT_SECRET=your-salt-secret-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Security
SECRET_KEY=your-secret-key-for-jwt-signing
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_NEW_POST=10:3600
RATE_LIMIT_FEEDBACK=50:3600
RATE_LIMIT_REPORT=20:86400

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# ML Models
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
TOXICITY_MODEL=unitary/toxic-bert

# Crisis Resources
CRISIS_HOTLINE_US=988
CRISIS_HOTLINE_UK=116123
